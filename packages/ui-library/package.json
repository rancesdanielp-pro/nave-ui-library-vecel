{
    "name": "nave-ui-library",
    "version": "1.0.0-beta.21",
    "description": "Universal UI library for Nave",
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/wc/index.js",
            "require": "./dist/wc/index.cjs"
        },
        "./styles.css": "./dist/styles.css",
        "./react": {
            "import": "./dist/react/index.js",
            "require": "./dist/react/index.cjs",
            "types": "./dist/react/index.d.ts"
        },
        "./wc": {
            "import": "./dist/wc/index.js",
            "require": "./dist/wc/index.cjs",
            "types": "./dist/wc/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "npm run build:css && tsup src/index.ts --format esm,cjs --dts",
        "build:css": "tailwindcss -c tailwind.config.js -i ./src/tailwind.css -o ./dist/styles.css --minify",
        "build:ts": "tsc --project tsconfig.cjs.json",
        "build:esm": "tsc --project tsconfig.esm.json",
        "clean": "rm -rf dist"
    },
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18",
        "tailwindcss": ">=3.0.0",
        "lucide-react": ">=0.545",
        "@radix-ui/react-checkbox": ">=1.3.3",
        "@radix-ui/react-label": ">=2.1.8",
        "@radix-ui/react-radio-group": ">=1.3.8",
        "@radix-ui/react-select": ">=2.2.5",
        "@radix-ui/react-slot": ">=1.2.4",
        "@radix-ui/react-switch": ">=1.2.6",
        "@radix-ui/react-alert-dialog": ">=1.0.5",
        "@radix-ui/react-tabs": ">=1.1.13",
        "@radix-ui/react-dropdown-menu": ">=2.1.16",
        "@radix-ui/react-progress": ">=1.1.8",
        "@radix-ui/react-avatar": ">=1.1.11",
        "@radix-ui/react-popover": ">=1.1.15",
        "@radix-ui/react-accordion": ">=1.2.4",
        "@radix-ui/react-separator": ">=1.1.8",
        "@radix-ui/react-tooltip": ">=1.2.8",
        "react-day-picker": ">=9.13.0",
        "vaul": ">=1.1.2",
        "react-to-webcomponent": ">=2.0.1"
    },
    "devDependencies": {
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.0",
        "nativewind": "^4.0.0",
        "tailwind-merge": "^2.4.0",
        "tailwindcss": "^3.4.0",
        "tsup": "^8.5.1",
        "typescript": "^5.4.0"
    }
}